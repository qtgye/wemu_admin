{% extends '@templates/layouts/auth.twig' %}

{% block title %}Log In{% endblock %}
{% block body_class %}page--login{% endblock %}

{% block body %}
	<div class="login">
		<div class="login__header">
			<img src="/images/logo.svg" class="login__logo">
			<div class="login__tagline">For cool people only <span class="login__tagline-emoji">ðŸ˜Ž</span></div>
		</div>
		<div class="login__content">
			<form action="/" method="post">
				<div class="input-block">
					<label for="email">Username</label>
					<input type="email" id="email">
				</div>
				<div class="input-block">
					<label for="password">Password</label>
